<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:text="Roboto Thin"
        android:textColor="@color/black"
        android:textSize="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Roboto Light"
        android:textColor="@color/black"
        android:textSize="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Roboto Regular"
        android:textColor="@color/black"
        android:textSize="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif_bold"
        android:text="Roboto Bold"
        android:textColor="@color/black"
        android:textSize="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Roboto Medium"
        android:textColor="@color/black"
        android:textSize="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Roboto Condensed Medium"
        android:textColor="@color/black"
        android:textSize="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Roboto Black"
        android:textColor="@color/black"
        android:textSize="27dp" />

    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/ds30"
        android:elevation="@dimen/ds10"
        android:layout_margin="@dimen/ds5"
        android:textColor="@color/black"
        android:autoLink="web"
        android:text="百度 http://www.baidu.com 你好,百度 http://www.baidu.com 你好,百度 http://www.baidu.com 你好"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:shadowColor="@color/black"
        android:shadowRadius="3.0"
        android:shadowDx="5"
        android:shadowDy="5"
        android:textColorLink="@color/light_green_bg"
        android:layout_height="@dimen/ds100" />
</LinearLayout>