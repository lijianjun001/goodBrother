<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/start_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/start" />


    <RelativeLayout
        android:id="@+id/skip_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:alpha="0.5"
        android:background="@drawable/start_skip_round_bg"
        android:padding="3dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/skip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#006838"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/skip_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/skip_time"
            android:background="@drawable/start_skip_in"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>