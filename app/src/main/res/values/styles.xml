<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme. -->
    <style name="TranslateTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <!--全屏加透明-->
    <style name="TranslucentFullScreenTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--全屏-->
    <style name="FullScreenTheme" parent="TranslateTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--透明，有任务栏电量时间等-->
    <style name="NoTitleTranslucentTheme" parent="TranslateTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- wxActivity theme. -->
    <style name="MyTranslucentTheme" parent="NoTitleTranslucentTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="common_editView">
        <item name="android:background">@drawable/common_edit_view_bg</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#CDD5DF</item>
        <item name="android:textSize">16dp</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">@dimen/ds25</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="login_dialog_btn">
        <item name="android:background">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#2DC090</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="calendar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="profits_line_chart_bottom_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/ds22</item>
        <item name="android:paddingBottom">@dimen/ds22</item>
        <item name="android:layout_marginLeft">@dimen/ds33</item>
        <item name="android:layout_marginRight">@dimen/ds33</item>
    </style>

    <style name="profits_line_chart_bottom_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="common_horizon_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#E6E6E6</item>
    </style>

    <style name="future_profits_item_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/ds33</item>
        <item name="android:layout_marginRight">@dimen/ds33</item>
    </style>

    <style name="future_profits_item_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_bg</item>
    </style>


    <style name="main_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/ds31</item>
        <item name="android:textColor">@color/selector_radio_bottom_txt</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/ds7</item>
    </style>

</resources>
